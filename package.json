{
  "name": "kuloer",
  "version": "0.0.0",
  "description": "A lightning-fast CSS color parsing and manipulation library with a tiny footprint",
  "license": "MIT",
  "repository": "kasperisager/kuloer",
  "author": "Kasper Kronborg Isager <kasperisager@gmail.com>",
  "scripts": {
    "test": "xo && ava",
    "coverage": "nyc --reporter=html npm test",
    "transpile": "babel lib -d dist",
    "prepublish": "npm run transpile"
  },
  "main": "dist/color.js",
  "jsnext:main": "lib/color.js",
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "functional",
    "css",
    "color",
    "parsing",
    "manipulation",
    "es6",
    "modern",
    "browser"
  ],
  "devDependencies": {
    "ava": "^0.12.0",
    "babel-cli": "^6.6.4",
    "nyc": "^5.6.0",
    "xo": "^0.12.1"
  },
  "ava": {
    "verbose": true,
    "require": [
      "babel-core/register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "xo": {
    "space": true,
    "exnext": true,
    "rules": {
      "new-cap": 0
    }
  }
}
